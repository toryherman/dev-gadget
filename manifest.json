{
  "manifest_version": 2,
  "name": "Dev Gadget",
  "version": "1.0.0",

  "description": "Easily pull CSS for text on web pages",
  "icons": {
    "19": "images/icon19.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "Dev Gadget"
  },

  "permissions": [
    "<all_urls>",
    "tabs"
  ],

  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },

  "commands": {
		"_execute_browser_action": {
			"suggested_key": {
				"default": "Alt+Shift+D"
			}
		}
	}
}
